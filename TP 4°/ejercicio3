Algoritmo ejercicio3
	
	Definir pesoPieza, op Como Entero;
	Definir contador, contador2, contador3, contador4 Como Real;
	
	
	op = 1;
	
	Repetir
		contador = contador + 1;
		
		Escribir "Cuanto pesa (kg) tu pieza ", contador, "?";
		Leer pesoPieza;
		
		si(pesoPieza >= 9.8 && pesoPieza <= 10.2)
			contador2 = contador2 + 1;
			
		sino si(pesoPieza > 10.2)
				contador3 = contador3 + 1;
				
			sino 
				contador4 = contador4 + 1;
		FinSi
		FinSi
		
		Escribir "0 para salir / 1 seguir";
		Leer op;
	Hasta Que(op == 0) 
	
	
	Escribir "Piezas procesadas: ", contador;
	
	Escribir "cantidad de piezas de menos de 9.8kg: ", contador4;
	Escribir "cantidad de piezas entre 9.8kg y 10.2kg: ", contador2;
	Escribir "cantidad de piezas de mas de 10.2kg: ", contador3;
	
FinAlgoritmo
